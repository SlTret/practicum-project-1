{{{modalWindow}}}
<div class="chat">
    <div class="chats">
        <div class="chats__profile">
            {{{profileBtn}}}
        </div>
        <div class="search">
            <div class="search__btn">
                <svg style="width:30px;height:30px" viewBox="0 0 24 24">
                    <path fill="currentColor"
                        d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                </svg>
            </div>
            <input class="search__input" type="text" placeholder="Поиск">
        </div>

        <div class="chats__list">
            <ul class="chat__items">
                {{#each chats}}
                <li id="{{this.id}}"></li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="messages">
        <div class="messages__profile">
            <div class="messages__user-info">

                <svg display={{currentChatExist}} style="pointer-events:none; width:50px;height:50px"
                    viewBox="0 0 24 24">
                    <mask id="currentChatMaskId">
                        <circle fill="#eee" cx="12" cy="12" r="12"></circle>
                    </mask>
                    <circle fill="#eee" cx="12" cy="12" r="12"></circle>
                    <path display={{defaultCurrentChatDisplay}} fill="#999"
                        d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,6A2,2 0 0,0 10,8A2,2 0 0,0 12,10A2,2 0 0,0 14,8A2,2 0 0,0 12,6M12,13C14.67,13 20,14.33 20,17V20H4V17C4,14.33 9.33,13 12,13M12,14.9C9.03,14.9 5.9,16.36 5.9,17V18.1H18.1V17C18.1,16.36 14.97,14.9 12,14.9Z" />
                    <image display={{avatarCurrentChatDisplay}} style="width:25px;height:25px"
                        xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="{{currentChatAvatar}}"
                        mask="url(#currentChatMaskId)" />
                </svg>

                {{currentChatName}}

            </div>
            <div class="messages__settings">
                {{{createChatBtn}}}
                {{{removeUser}}}
                {{{addUser}}}
                {{{logoutButton}}}
            </div>
        </div>
        <div class="messages__list">

            <ul>
                {{#each messages}}
                <div>{{this.time}}</div>
                <div>{{this.content}}</div>
                <br>
                {{/each}}
            </ul>

        </div>
        <div class="messages__plane">
            <button class="action-btn" href="404">
                <svg style="pointer-events:none;width:30px;height:30px" viewBox="0 0 24 24">
                    <path fill="currentColor"
                        d="M16.5,6V17.5A4,4 0 0,1 12.5,21.5A4,4 0 0,1 8.5,17.5V5A2.5,2.5 0 0,1 11,2.5A2.5,2.5 0 0,1 13.5,5V15.5A1,1 0 0,1 12.5,16.5A1,1 0 0,1 11.5,15.5V6H10V15.5A2.5,2.5 0 0,0 12.5,18A2.5,2.5 0 0,0 15,15.5V5A4,4 0 0,0 11,1A4,4 0 0,0 7,5V17.5A5.5,5.5 0 0,0 12.5,23A5.5,5.5 0 0,0 18,17.5V6H16.5Z" />
                </svg>
            </button>
            <input class="messages__input" name="message" type="text" placeholder="Сообщение">
            <button class="action-btn" href="sendMsg">
                <svg style="pointer-events:none;width:30px;height:30px" viewBox="0 0 24 24">
                    <path fill="currentColor"
                        d="M22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12M6,13H14L10.5,16.5L11.92,17.92L17.84,12L11.92,6.08L10.5,7.5L14,11H6V13Z" />
                </svg>
            </button>
        </div>
    </div>
</div>