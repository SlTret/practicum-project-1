        "node": "16.13.2"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack --mode=production --define-process-env-node-env=production",
        "build:dev": "webpack --mode=development",
        "build:prod": "webpack --mode=production --define-process-env-node-env=production",
        "watch": "webpack --watch",
        "serve": "webpack serve",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "stylelint": "stylelint \"src/**/*.scss\"",
        "stylelint:fix": "stylelint \"src/**/*.scss\" --fix",
        "tests": "ts-mocha test/jsdom/setup.js --require ignore-styles --require handlebars-loader -p ./tsconfig.json src/**/*.spec.ts",
        "start": "webpack --mode=production --define-process-env-node-env=production && node src/server/server.js",
        "all": "npm-run-all tests lint stylelint:fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "all"
        }
    },
